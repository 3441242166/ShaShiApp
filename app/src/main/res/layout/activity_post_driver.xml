<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            app:title="月薪"
            app:hint_content="请输入月薪"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditPlusLayout
            app:title="工作描述"
            app:hint_content="请输入工作描述"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostChooseLayout
            app:title="工作年限"
            app:hint_content="请选择"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            app:title="工作地点"
            app:hint_content="请输入工作地点"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            app:title="联系人"
            app:hint_content="请输入联系人"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            app:title="联系电话"
            app:hint_content="请输入联系电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />


        <Button
            android:id="@+id/button6"
            style="@style/button_blue"
            android:layout_margin="@dimen/dp_40"
            android:text="发布" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>