<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_item_height"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.customizeview.SettingSwitchLayout
            android:id="@+id/sl_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_item_height"
            app:title="全部播报" />

        <View style="@style/view_big_line" />

        <com.shashiwang.shashiapp.customizeview.SettingSwitchLayout
            android:id="@+id/sl_factory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_item_height"
            app:title="播报石料厂" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.SettingSwitchLayout
            android:id="@+id/sl_station"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_item_height"
            app:title="播报搅拌站" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.SettingSwitchLayout
            android:id="@+id/sl_freight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_item_height"
            app:title="播报运费" />

        <View style="@style/view_line" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>