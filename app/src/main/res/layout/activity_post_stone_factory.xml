<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="名称"
            app:hint_content="请输入石料厂名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditPlusLayout
            app:title="品类价格"
            app:hint_content="如:XXXXXXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostLocationLayout
            app:title="所在位置"
            app:hint_content="点击选择"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="联系人"
            app:hint_content="请输入联系人"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="联系电话"
            app:hint_content="请输入联系电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditPlusLayout
            app:title="备注信息"
            app:hint_content="添加备注信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>