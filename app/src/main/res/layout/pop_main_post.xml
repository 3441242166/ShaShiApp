<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#bfffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <RelativeLayout
            android:id="@+id/rl_pop_freight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_job"
                style="@style/style_post_pop_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="38dp"
                android:src="@drawable/logo_frigen" />

            <TextView
                android:id="@+id/tv_job"
                style="@style/style_post_pop_text"
                android:layout_below="@+id/iv_job"
                android:text="运费发布"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pop_dirver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_recruit"
                style="@style/style_post_pop_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="38dp"
                android:src="@drawable/logo_driver" />

            <TextView
                android:id="@+id/tv_recruit"
                style="@style/style_post_pop_text"
                android:layout_below="@+id/iv_recruit"
                android:text="司机招聘"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pop_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_car_sale"
                style="@style/style_post_pop_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="37dp"
                android:src="@drawable/logo_car" />

            <TextView
                android:id="@+id/tv_friend"
                style="@style/style_post_pop_text"
                android:layout_below="@+id/iv_car_sale"
                android:text="车辆出售"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/rl_pop_stone_factory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_sign_in"
                style="@style/style_post_pop_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="68dp"
                android:src="@drawable/logo_factory" />

            <TextView
                android:id="@+id/tv_sign_in"
                style="@style/style_post_pop_text"
                android:layout_below="@+id/iv_sign_in"
                android:text="我是沙石料厂"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pop_mix_station"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_post"
                style="@style/style_post_pop_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="68dp"
                android:src="@drawable/logo_station" />

            <TextView
                android:id="@+id/tv_post"
                style="@style/style_post_pop_text"
                android:layout_below="@+id/iv_post"
                android:text="我是搅拌站/工地"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/met_ic_clear" />


</android.support.constraint.ConstraintLayout>