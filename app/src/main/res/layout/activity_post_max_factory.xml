<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入搅拌厂名称"
            app:title="名称" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditPlusLayout
            android:id="@+id/ed_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="如:XXXXXXX"
            app:title="品类价格" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostLocationLayout
            android:id="@+id/ed_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="点击选择"
            app:title="所在位置" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入联系人"
            app:title="联系人" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入联系电话"
            app:title="联系电话" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditPlusLayout
            android:id="@+id/ed_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="添加备注信息"
            app:title="备注信息" />

        <Button
            android:id="@+id/bt_send"
            style="@style/button_yellow"
            android:layout_margin="@dimen/dp_40"
            android:text="发布" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>