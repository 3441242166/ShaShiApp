<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入品牌名称"
            app:title="品牌" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入行驶里程"
            app:title="行驶里程" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入价格"
            app:title="价格" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入联系人"
            app:title="联系人" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditLayout
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入联系电话"
            app:title="联系电话" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostChooseLayout
            android:id="@+id/ch_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请选择"
            app:title="类型" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostChooseLayout
            android:id="@+id/ch_create_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请选择"
            app:title="出厂年限" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.customizeview.PostEditPlusLayout
            android:id="@+id/ed_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_content="请输入备注信息"
            app:title="备注信息" />

        <View style="@style/view_line" />

        <Button
            android:id="@+id/bt_send"
            style="@style/button_yellow_send"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="发布" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>