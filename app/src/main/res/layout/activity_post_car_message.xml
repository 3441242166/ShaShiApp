<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="品牌"
            app:hint_content="请输入品牌名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="行驶里程"
            app:hint_content="请输入行驶里程"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="价格"
            app:hint_content="请输入价格"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="联系人"
            app:hint_content="请输入联系人"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditLayout
            app:title="联系电话"
            app:hint_content="请输入联系电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostChooseLayout
            app:title="类型"
            app:hint_content="请选择"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostChooseLayout
            app:title="出厂年限"
            app:hint_content="请选择"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <com.shashiwang.shashiapp.myview.PostEditPlusLayout
            app:title="备注信息"
            app:hint_content="请输入备注信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/view_line" />

        <Button
            android:id="@+id/button6"
            style="@style/button_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_40"
            android:text="发布" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>